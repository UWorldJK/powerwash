      <!-- Image Cluster -->
      <div style="background-color: #000; border-radius: 25px; height: 470px; width:50%; transform: translate(0px, 15px);">
        <img src="../assets/img/bitcoin.png" style="transform:translate(-125px, -200px) scale(.2);"/>
        <img src="../assets/img/etherum.png" style="transform:translate(-125px, -650px) scale(.2);"/>
        <img src="../assets/img/etherum.png" style="transform:translate(120px, -1535px) scale(.2);"/>
        <img src="../assets/img/bitcoin.png" style="transform:translate(120px, -1985px) scale(.2);"/>
      </div>

      <!-- Video -->
      <div>
        <img src="../assets/videos//powerwashing-monkey.gif" style="transform: scale(.65) translate(625px, -825px); border-radius: 25px;">
      </div>
    </div>
</body>