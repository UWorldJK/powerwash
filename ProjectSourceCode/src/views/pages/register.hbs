<body>
    <div class="container" style="width:30%; transform: translate(-500px, 120px); background: #000; height: 500px; border-radius: 25px;">
      <form action="/register" method="POST">
        <div data-mdb-input-init class="form-outline mb-4" style="transform: translate(0px, 40px);">

          {{!-- Email --}}
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" class="form-control" required>
          {{email}}

          <br>

          {{!-- Username --}}
          <label for="username">Username:</label>
          <input type="username" name="username" id="username" class="form-control" required>
          {{username}}

          <br>

          {{!-- Password --}}
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" class="form-control" required>
          {{password}}

          <br>
          {{!-- firstname --}}
          <label for="firstname">First Name:</label>
          <input type="text" name="firstname" id="firstname" class="form-control" required>
         

          <br>
          {{!-- lastname --}}
          <label for="lastname">last Name:</label>
          <input type="text" name="lastname" id="lastname" class="form-control" required>
          

          <br>

          {{!-- country --}}
          <label for="country">Country:</label>
          <input type="text" name="country" id="country" class="form-control" required>
          

          <br>

          {{!-- Submit --}}
          <button id="submit_button" type="submit" class="btn btn-primary btn-block mb-4">Register</button>

          <div class="col d-flex justify-content-center">
              <a href="/login">Already have an account?</a>
          </div> 

          {{!-- Github Link --}}
          <div class="col d-flex justify-content-center">
             <a href="https://github.com/UWorldJK/powerwash" target="_blank">
                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-github"></i>
                </button>
              </a>
          </div>

        </div>    
      </form>
    </div>

