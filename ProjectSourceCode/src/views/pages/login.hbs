<!DOCTYPE html>
<html lang="en" class="h-100">
  
{{>head}}

<body>
    
    {{>nav}}

     <div class="container" style="width:30%; transform: translate(-500px, 120px); background: #000; height: 500px; border-radius: 25px;">
      <form>
        <!-- Email input -->
        <div data-mdb-input-init class="form-outline mb-4" style="transform: translate(0px, 80px);">
          <input type="email" id="form2Example1" class="form-control" />
          <label class="form-label" for="form2Example1">Email address</label>
        </div>
      
        <!-- Password input -->
        <div data-mdb-input-init class="form-outline mb-4" style="transform: translate(0px, 110px);">
          <input type="password" id="form2Example2" class="form-control" />
          <label class="form-label" for="form2Example2">Password</label>
        </div>
      
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4" style="transform: translate(0px, 80px);">
          <div class="col d-flex justify-content-center">
          </div>
      
          <div class="col" style="transform: translate(-45px, 110px);">
            <!-- Simple link -->
            <a href="register">Register</a>
          </div>
        </div>

      
        <!-- Submit button -->
        <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="transform: translate(0px, 80px);">Log In</button>

        <div class="text-center" style="transform: translate(0px, 100px);">
          <a href="https://github.com/UWorldJK/powerwash" target="_blank">
            <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
              <i class="fab fa-github" style="transform: translate(0px, 10px);"></i>
            </button>
          </a>
        </div>

        <div class="col" style="transform: translate(140px, 120px);">
          <!-- Simple link -->
          <a href="forgot">Forgot Password</a>
        </div>
      </form>
    </div>

    
    <div class="container" style = "transform: translate(245px,-380px); background-color: blueviolet; width: 65%; height: 500px; border-radius: 25px;" overflow: hidden;>
      <!-- Image Cluster -->
      <div style="background-color: #000; border-radius: 25px; height: 470px; width:50%; transform: translate(0px, 15px);">
        <img src="../assets/img/bitcoin.png" style="transform:translate(-125px, -200px) scale(.2);"/>
        <img src="../assets/img/etherum.png" style="transform:translate(-125px, -650px) scale(.2);"/>
        <img src="../assets/img/etherum.png" style="transform:translate(120px, -1535px) scale(.2);"/>
        <img src="../assets/img/bitcoin.png" style="transform:translate(120px, -1985px) scale(.2);"/>
      </div>

      <!-- Video -->
      <div>
            <img src="../assets/videos//powerwashing-monkey.gif" style="transform: scale(.65) translate(625px, -825px); border-radius: 25px;">
      </div>
    </div>
