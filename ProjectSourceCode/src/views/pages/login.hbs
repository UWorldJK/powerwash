<body>
    <div class="container" style="width:30%; transform: translate(-500px, 120px); background: #000; height: 500px; border-radius: 25px;">
      <form action="/login" method="POST">
        {{!-- Login Form --}}
        <div data-mdb-input-init class="form-outline mb-4" style="transform: translate(0px, 80px);">
          {{!-- Email --}}
          <label for="username">Username:</label>
          <input type="username" name="username" id="username" class="form-control" required>
          {{username}}

          <br>
          {{!-- Password --}}
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" class="form-control" required>
          {{password}}

          <br>

          {{!-- Submit --}}
          <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Log In</button>
          
          {{!-- Password reset --}}
          <div class="col d-flex justify-content-center">
              <a href="/forgot">Forgot Password?</a>
          </div> 
      


          {{!-- Github Link --}}
          <div class="col d-flex justify-content-center">
             <a href="https://github.com/UWorldJK/powerwash" target="_blank">
                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-github"></i>
                </button>
              </a>
          </div>

          {{!-- Register Link --}}
          <div class="col d-flex justify-content-center">
              <a href="/register">Register</a>
          </div> 
              

        </div>
      </form>
    </div>

    
